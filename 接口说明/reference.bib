@article{
沈良剑冼志恒-7,
   Author = {沈良剑 and 冼志恒 and 李景良 and 王清阳},
   Title = {基于Vincenty公式的飞机到特殊空域的距离计算方法},
   Journal = {民航学报},
   Number = {第3期},
   Pages = {6-11},
   Abstract = {为实时计算飞机到特殊空域的距离,确保民航飞机及时避开,保障飞行安全,本文在二维平面内对不同形状的特殊空域进行分析,提出基于Vincenty公式的各边最短距离法和顶点最小覆盖圆法。进而,将各边最短距离法拓展应用到计算飞机到边境线距离问题中。结合多组实际数据进行仿真分析,确定不同方法的使用场景,结果表明,本方法可以准确计算飞机与圆形特殊空域、多边形特殊空域之间的距离,实时计算压力小;在飞机与边境线的距离计算中,本方法适用、可行。},
   Keywords = {特殊空域；距离计算；预警；Vincenty公式；边境线},
   Year = {2024} }




@article{
高志周万路军-5,
   Author = {高志周 and 万路军 and 钟赟 and 蔡明 and 徐鑫宇},
   Title = {空域预先规划时间的冲突处理方法研究},
   Journal = {兵器装备工程学报},
   Volume = {43},
   Number = {7},
   Pages = {247-253},
   DOI = {10.11809/bqzbgcxb2022.07.037},
   Abstract = {作战任务对各类空域的需求需要对空域的使用时间进行预先规划,通过对空域添加时间约束以限定空域的使用时段,从而避免空域产生冲突.基于简单时间网络STN(simple temporal network,STN)构建空域使用时间网络约束图,利用SPFA(shortest path faster algorithm,SPFA)改进算法对空域预先规划时间冲突进行检测,并通过基于最小代价的负环消解算法对时间冲突进行消解,最后通过实例分析对预先规划时间冲突进行检测及消解进行验证,结果表明,用STN处理空域的预先规划时间冲突是可行的.},
   Keywords = {简单时间网络; 空域预先规划时间冲突; 时间冲突检测; 时间冲突消解; SPFA改进算法},
   Year = {2022} }




@phdthesis{
王瑞冬-1,
   Author = {王瑞冬},
   Title = {Clifford代数的可视化方法与应用研究},
   School = {中国民航大学},
   Abstract = {Clifford代数可以实现坐标系统的统一，且其几何关系计算不依赖于坐标，在多维空间上计算便利，为几何元素跨维度计算提供了有利支撑。在应用中可以弥补欧氏空间算法的不足。但其定义及运算较为抽象，难于直观理解。　　为便于直观理解Clifford代数定义及其运算，本文首先研究了Clifford代数可视化。运用Gaigen生成Clifford代数源程序，在Visual Studio中进行可视化环境配置，对Clifford代数的基本元素及正交、投影、Meet和Join等基本运算进行可视化表示。　　其次，提出了一种基于几何代数的跑道侵入与冲突检测方法：对跑道保护区、飞行器保护区进行几何代数描述，构建冲突场景，基于几何代数的外积和内积实现跑道侵入与冲突检测。实验表明，相对于欧氏空间算法，本文算法同样可以准确判断跑道侵入与跑道冲突，且速度更快。　　最后，提出了一种基于几何代数的障碍物评估方法，对ILS面和OAS面进行了共形几何代数描述，并运用Meet算子进行障碍物评估。实验表明本文方法在障碍物评估中的检测速度也优于欧氏空间方法。},
   Keywords = {Clifford代数; 源程序; 可视化环境配置; 运算过程},
   Year = {2021} }




@article{
ZhenghongMingliang-3,
   Author = {Zhenghong, Gao and Mingliang, Wang},
   Title = {An Efficient Algorithm for Calculating Aircraft RCS Based on the Geometrical Characteristics},
   Journal = {Chinese Journal of Aeronautics},
   Volume = {21},
   Number = {4},
   Pages = {296-303},
   DOI = {https://doi.org/10.1016/S1000-9361(08)60039-4},
   Abstract = {Taking into account the influences of scatterer geometrical shapes on induced currents, an algorithm, termed the sparse-matrix method (SMM), is proposed to calculate radar cross section (RCS) of aircraft configuration. Based on the geometrical characteristics and the method of moment (MOM), the SMM points out that the strong current coupling zone could be predefined according to the shape of scatterers. Two geometrical parameters, the surface curvature and the electrical space between the field position and source position, are deducted to distinguish the dominant current coupling. Then the strong current coupling is computed to construct an impedance matrix having sparse nature, which is solved to compute RCS. The efficiency and feasibility of the SMM are demonstrated by computing elec-tromagnetic scattering of some kinds of shapes such as a cone-sphere with a gap, a bi-arc column and a stealth aircraft configuration. The numerical results show that: (1) the accuracy of SMM is satisfied, as compared with MOM, and the computational time it spends is only about 8% of the MOM; (2) with the electrical space considered, making another allowance for the surface curvature can reduce the computation time by 9.5%.},
   Keywords = {radar cross section (RCS); geometrical characteristic; method of moment; impedance matrix},
   Year = {2008} }




@article{
刘昕-4,
   Author = {刘昕},
   Title = {基于计算几何方法的飞行冲突检测},
   Journal = {电子测量技术},
   Volume = {30},
   Number = {4},
   Pages = {87-89,99},
   DOI = {10.3969/j.issn.1002-7300.2007.04.025},
   Abstract = {在对自由飞行进行适当的简化建模后,引入常用于计算流体力学Delaunay网格生成方法,对于空中交通冲突进行检测,能够同时检测到空域内的多架飞机间的冲突.该方法能同时探测多架飞机之间发生的冲突和潜在冲突,减少不必要的距离探测,从而减少了计算量,同时较传统的方法也大大地减少了运算量.最后通过仿真模拟,显示此方法的优越性.该方法可以用于以后的空域设计和管理,使空域结构更为合理、稳固.在今后的设计使用上,这种方法有可能减轻飞行员和管制员主观性的工作负荷.},
   Keywords = {自由飞行; 冲突检测; Deluanay三角剖分},
   Year = {2007} }


